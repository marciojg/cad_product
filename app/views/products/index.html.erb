
<div class="container">
  <h1>Estoque</h1>
  <div class="card-deck mb-3 text-center">
    <% if @products.present? %>
      <% @products.each do |product| %>
        <%= render 'product', product: product %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="container">
  <%= link_to 'Cadastrar novo produto', new_product_path, class: "btn btn-lg btn-block btn-primary", style: "color: #fff" %>
</div>
